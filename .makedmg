#!/bin/sh

# ----
# A script for building (or cleaning) a disk image
# via excode. Set this as the argument for an
# "External Target".
# ----

dmg="${BUILT_PRODUCTS_DIR}/${PROJECT_NAME}.dmg"
test "${ACTION}" != "clean" && hdiutil create -ov -srcfolder "${BUILT_PRODUCTS_DIR}/" -volname "$PROJECT_NAME" "$dmg" || rm -f "$dmg"
